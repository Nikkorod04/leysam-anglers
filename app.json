{
  "expo": {
    "name": "LeySam Anglers",
    "slug": "leysam-anglers",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/nikko.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/nikko.png",
      "resizeMode": "contain",
      "backgroundColor": "#2196F3"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.leysam.anglers"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/nikko.png",
        "backgroundColor": "#2196F3"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.leysam.anglers",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/nikko.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow LeySam Anglers to use your location to mark fishing spots."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow LeySam Anglers to access your photos to share your catches.",
          "cameraPermission": "Allow LeySam Anglers to use your camera to capture your catches."
        }
      ],
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-4143696379274937~6133079953",
          "iosAppId": "ca-app-pub-4143696379274937~6133079953"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "4389a018-ac75-4585-a1b6-2fee37b7557b"
      }
    }
  }
}
